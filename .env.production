# Production Environment Configuration
# This file contains production-ready defaults

# API Configuration
OPENAI_API_KEY=your-production-api-key-here
MAX_API_BUDGET=100.0
BUDGET_WARNING_THRESHOLD=0.8
BUDGET_EMERGENCY_THRESHOLD=0.95

# Model Configuration
DEFAULT_LLM_MODEL=gpt-4
DEFAULT_EMBEDDING_PHASE=phase2
LLM_TEMPERATURE=0.1
MAX_API_RETRIES=3

# Optimization Parameters
MAX_OPTIMIZATION_ITERATIONS=10
CONVERGENCE_THRESHOLD=0.02
QUALITY_HISTORY_WINDOW=3
TOPIC_ANALYSIS_BATCH_SIZE=10
ENABLE_TOPIC_SPLIT=true

# Topic Modeling Configuration
MIN_TOPIC_SIZE=15
UMAP_N_NEIGHBORS=15
UMAP_N_COMPONENTS=5

# Production Settings
LOG_LEVEL=INFO
VERBOSE_LOGGING=false
SAVE_CHECKPOINTS=true
DEVELOPMENT_MODE=false
DEFAULT_SAMPLE_SIZE=0

# Performance
USE_GPU=true
EMBEDDING_BATCH_SIZE=64
MAX_MEMORY_USAGE_GB=16

# Security
VALIDATE_API_KEYS=true
MASK_SENSITIVE_INFO=true
API_RATE_LIMIT=30

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_MODERNBERT=true
ENABLE_LOCAL_LLM=true
ENABLE_ADVANCED_VISUALIZATIONS=true
ENABLE_REAL_TIME_MONITORING=true