# Development Environment Configuration
# This file contains safe defaults for development

# API Configuration
OPENAI_API_KEY=your-development-api-key-here
MAX_API_BUDGET=5.0
BUDGET_WARNING_THRESHOLD=0.7
BUDGET_EMERGENCY_THRESHOLD=0.9

# Model Configuration
DEFAULT_LLM_MODEL=gpt-3.5-turbo
DEFAULT_EMBEDDING_PHASE=phase1
LLM_TEMPERATURE=0.1
MAX_API_RETRIES=2

# Optimization Parameters (Reduced for Development)
MAX_OPTIMIZATION_ITERATIONS=2
CONVERGENCE_THRESHOLD=0.05
QUALITY_HISTORY_WINDOW=1
TOPIC_ANALYSIS_BATCH_SIZE=5
ENABLE_TOPIC_SPLIT=false

# Topic Modeling Configuration
MIN_TOPIC_SIZE=5
UMAP_N_NEIGHBORS=10
UMAP_N_COMPONENTS=3

# Development Settings
LOG_LEVEL=DEBUG
VERBOSE_LOGGING=true
SAVE_CHECKPOINTS=true
DEVELOPMENT_MODE=true
DEFAULT_SAMPLE_SIZE=100

# Performance
USE_GPU=false
EMBEDDING_BATCH_SIZE=16
MAX_MEMORY_USAGE_GB=4

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=true
ENABLE_ADVANCED_VISUALIZATIONS=false
ENABLE_REAL_TIME_MONITORING=false