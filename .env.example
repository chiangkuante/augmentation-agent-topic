# =============================================================================
# Augmentation Agent Topic - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to version control - it contains secrets!

# =============================================================================
# API Configuration
# =============================================================================

# OpenAI API Key (Required)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Alternative API Configuration (Optional)
# ANTHROPIC_API_KEY=your-anthropic-key-here
# COHERE_API_KEY=your-cohere-key-here

# =============================================================================
# Budget and Cost Control
# =============================================================================

# Maximum API budget in USD (Default: 50.0)
MAX_API_BUDGET=50.0

# Budget alerts (Default: 0.8 = 80% of budget)
BUDGET_WARNING_THRESHOLD=0.8

# Emergency stop threshold (Default: 0.95 = 95% of budget)
BUDGET_EMERGENCY_THRESHOLD=0.95

# =============================================================================
# Model Configuration
# =============================================================================

# Default LLM model (Options: gpt-4, gpt-3.5-turbo, gpt-4-turbo)
DEFAULT_LLM_MODEL=gpt-4

# Default embedding model phase (Options: phase1, phase2, phase3)
DEFAULT_EMBEDDING_PHASE=phase1

# LLM temperature for stable outputs (Range: 0.0-1.0)
LLM_TEMPERATURE=0.1

# Maximum retries for API calls
MAX_API_RETRIES=3

# =============================================================================
# Optimization Parameters
# =============================================================================

# Maximum optimization iterations
MAX_OPTIMIZATION_ITERATIONS=5

# Quality improvement threshold for convergence
CONVERGENCE_THRESHOLD=0.02

# Quality history window for plateau detection
QUALITY_HISTORY_WINDOW=2

# Batch size for topic analysis (cost optimization)
TOPIC_ANALYSIS_BATCH_SIZE=10

# Enable SPLIT operations (Phase 1: false, Phase 2: true)
ENABLE_TOPIC_SPLIT=false

# =============================================================================
# Topic Modeling Configuration
# =============================================================================

# Minimum topic size for BERTopic
MIN_TOPIC_SIZE=10

# UMAP parameters
UMAP_N_NEIGHBORS=15
UMAP_N_COMPONENTS=5
UMAP_MIN_DIST=0.0
UMAP_METRIC=cosine

# HDBSCAN parameters
HDBSCAN_MIN_CLUSTER_SIZE=10
HDBSCAN_METRIC=euclidean

# =============================================================================
# Quality Thresholds
# =============================================================================

# Minimum coherence improvement required
MIN_COHERENCE_IMPROVEMENT=0.1

# Maximum allowed quality degradation
MAX_QUALITY_DEGRADATION=-0.05

# Minimum silhouette score threshold
MIN_SILHOUETTE_SCORE=0.1

# Minimum topic diversity threshold
MIN_TOPIC_DIVERSITY=0.5

# =============================================================================
# Resilience Framework Configuration
# =============================================================================

# Confidence threshold for resilience mapping (0.0-1.0)
RESILIENCE_CONFIDENCE_THRESHOLD=0.3

# Resilience analysis budget (portion of total budget)
RESILIENCE_ANALYSIS_BUDGET_RATIO=0.4

# Resilience scoring method (Options: weighted_average, simple_average)
RESILIENCE_SCORING_METHOD=weighted_average

# =============================================================================
# Data Processing Configuration
# =============================================================================

# Default data file path
DEFAULT_DATA_FILE=data/corpus_semantic_chunks.csv

# CSV encoding options (comma-separated)
CSV_ENCODING_OPTIONS=utf-8,latin-1,cp1252,iso-8859-1

# Minimum text length for documents (characters)
MIN_TEXT_LENGTH=10

# Sample size for development/testing (0 = no sampling)
DEFAULT_SAMPLE_SIZE=0

# =============================================================================
# Output and Logging Configuration
# =============================================================================

# Default log level (Options: DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable verbose logging
VERBOSE_LOGGING=true

# Save intermediate results during optimization
SAVE_CHECKPOINTS=true

# Auto-save results with timestamps
AUTO_SAVE_RESULTS=true

# Output directory (leave empty for auto-generated)
OUTPUT_DIRECTORY=

# =============================================================================
# Performance and Resource Configuration
# =============================================================================

# Use GPU if available for embeddings
USE_GPU=false

# Batch size for embedding computation
EMBEDDING_BATCH_SIZE=32

# Maximum memory usage for large datasets (in GB)
MAX_MEMORY_USAGE_GB=8

# Number of parallel workers (0 = auto-detect)
N_WORKERS=0

# =============================================================================
# Development and Testing Configuration
# =============================================================================

# Development mode (enables additional debugging)
DEVELOPMENT_MODE=false

# Skip expensive operations in development
SKIP_EXPENSIVE_OPERATIONS=false

# Use mock API responses (for testing without API costs)
USE_MOCK_API=false

# Test data directory
TEST_DATA_DIRECTORY=tests/data

# =============================================================================
# Security Configuration
# =============================================================================

# Enable API key validation on startup
VALIDATE_API_KEYS=true

# Mask sensitive information in logs
MASK_SENSITIVE_INFO=true

# Rate limiting for API calls (requests per minute)
API_RATE_LIMIT=60

# =============================================================================
# Integration Configuration
# =============================================================================

# External database connection (if using)
# DATABASE_URL=postgresql://user:password@localhost:5432/augmentation_agent_topic

# Redis connection for caching (if using)
# REDIS_URL=redis://localhost:6379/0

# Webhook URL for notifications (if using)
# WEBHOOK_URL=https://your-webhook-url.com/notifications

# =============================================================================
# Feature Flags
# =============================================================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable ModernBERT integration (Phase 2)
ENABLE_MODERNBERT=false

# Enable local LLM support
ENABLE_LOCAL_LLM=false

# Enable advanced visualizations
ENABLE_ADVANCED_VISUALIZATIONS=true

# Enable real-time monitoring
ENABLE_REAL_TIME_MONITORING=false